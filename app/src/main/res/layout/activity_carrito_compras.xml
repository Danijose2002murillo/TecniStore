<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/contenidoCarrito"
        android:background="@color/blanco_azulado"
        tools:context=".CarritoCompras">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="386dp"
            android:layout_height="561dp"
            android:id="@+id/listaCarrito"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/cardView">
    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
            android:layout_width="419dp"
            android:layout_height="55dp"
            android:orientation="vertical" android:id="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <include
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />
    </LinearLayout>
    <androidx.cardview.widget.CardView
            android:layout_width="416dp"
            android:layout_height="119dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardElevation="500dp" app:cardBackgroundColor="@color/blaco_arena"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/cardView">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="TOTAL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView3"
                    android:textColor="@color/azul_brillante" android:textSize="16sp" android:textStyle="bold"
                    android:layout_marginStart="10dp" android:layout_marginTop="5dp"/>
            <TextView
                    android:text="$2544"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content" android:id="@+id/txtTotalCompra"
                    android:textColor="@color/azul_marino" android:textSize="19sp" android:textStyle="bold"
                    android:textAlignment="viewEnd" android:layout_marginStart="220dp" android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="88dp" android:layout_marginTop="40dp">
            <Button
                    android:text="@string/btn_comprar"
                    android:layout_width="50dp"
                    android:layout_height="89dp" android:id="@+id/button" android:layout_weight="1"
                    android:backgroundTint="@color/verde_comprar" android:textColor="@color/verde_comprar_title"/>
            <Button
                    android:text="@string/btn_cancelarCarrito"
                    android:layout_width="50dp"
                    android:layout_height="89dp" android:id="@+id/button2" android:layout_weight="1"
                    android:backgroundTint="@color/rojo_opaco" android:textColor="@color/rojo_eliminar"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>