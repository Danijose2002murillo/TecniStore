<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetalleProducto">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="363dp"
                android:id="@+id/cardView2" app:cardElevation="20dp">
            <ImageView
                    android:id="@+id/big_image"
                    android:layout_width="340dp"
                    android:layout_height="340dp"
                    app:srcCompat="@drawable/ico_categoria_celular"
                    android:layout_marginTop="16dp" android:layout_marginStart="33dp" android:layout_marginEnd="0dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="348dp"
                app:cardElevation="15dp" android:id="@+id/cardView3"
                tools:ignore="NotSibling" app:cardBackgroundColor="@color/blanco_azulado">
            <TextView
                    android:text="Cantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_marginTop="90dp"
                    android:layout_marginStart="300dp" android:textStyle="bold"/>
            <TextView
                    android:text="Descripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_marginTop="140dp"
                    android:layout_marginStart="5dp" android:textSize="20sp" android:textStyle="bold"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="99dp"
                    android:layout_height="wrap_content" android:layout_marginStart="280dp"
                    android:layout_marginTop="120dp">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp" android:layout_marginTop="0dp"
                        android:layout_marginStart="0dp">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" app:srcCompat="@drawable/icon_plus"
                            android:id="@+id/btn_plus" android:layout_weight="1" android:layout_marginTop="0dp"
                            android:layout_marginStart="0dp"/>
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" app:srcCompat="@drawable/icon_minus"
                            android:id="@+id/btn_less" android:layout_weight="1" android:layout_marginTop="0dp"
                            android:layout_marginStart="50dp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_marginTop="3dp"
                        android:layout_marginStart="-67dp">
                    <TextView
                            android:text="1"
                            android:layout_width="32dp"
                            android:layout_height="wrap_content" android:id="@+id/txt_cantidad_compra"
                            android:layout_weight="1" android:textAlignment="center"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="125dp" android:layout_marginTop="180dp"
                    android:id="@+id/layout_descripcion">
                <TextView
                        android:id="@+id/prodDesc"
                        android:layout_width="406dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="272dp"
                        android:text="Luces led para el hogar muy lindas de todos los colores "
                        android:textSize="18sp"
                        android:layout_marginStart="10dp" android:textColor="@color/gris"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content" android:layout_marginStart="220dp"
                    android:layout_marginTop="20dp">
                <TextView
                        android:id="@+id/unit"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginStart="0dp"
                        android:text="@string/title_cantidad_title"
                        android:layout_marginTop="0dp" android:textColor="@color/gris"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="202dp"
                    android:layout_height="wrap_content" android:id="@+id/layout_nombre_precio"
                    android:layout_marginTop="10dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                    <TextView
                            android:id="@+id/productName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:text="TextView"
                            android:textSize="24sp"
                            android:textColor="@color/gris"/>
                    <TextView
                            android:id="@+id/prodPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="TextView"
                            android:textSize="24sp"
                            android:layout_marginStart="10dp" android:textColor="@color/azul_brillante"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="77dp"
                    android:layout_height="49dp" android:layout_marginStart="320dp"
                    android:layout_marginTop="13dp">
                <TextView
                        android:id="@+id/qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="TextView"
                        android:layout_marginStart="0dp" android:textColor="@color/gris"
                        android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@color/blanco_azulado">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="193dp"
                    android:layout_height="match_parent" android:id="@+id/linearLayout"
                    android:elevation="10dp" android:background="@android:color/transparent"
                    android:layout_marginStart="2dp">
                <Button
                        android:text="AÃ±adir "
                        android:layout_width="match_parent"
                        android:layout_height="99dp" android:id="@+id/button" android:layout_weight="1"
                        android:backgroundTint="@color/blanco_azulado" android:textColor="@color/gris_oscuro"
                        android:drawableLeft="@drawable/icon_add_shopping_cart" android:textSize="18sp"
                        android:layout_marginTop="2dp" android:elevation="0dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="219dp"
                    android:layout_height="match_parent"
                    android:background="@color/gris_oscuro" android:layout_marginStart="8dp">
                <Button
                        android:text="Comprar"
                        android:layout_width="wrap_content"
                        android:layout_height="101dp" android:id="@+id/button2" android:layout_weight="1"
                        android:backgroundTint="@color/gris_oscuro" android:drawableLeft="@drawable/icon_get_cash_"
                        android:textAlignment="viewStart" android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>