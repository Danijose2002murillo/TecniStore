<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PantallaInicio" android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="416dp"
            android:layout_height="656dp" android:background="@drawable/background_view_inicial"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            android:id="@+id/constraintLayout2">

        <com.airbnb.lottie.LottieAnimationView android:layout_width="382dp" android:layout_height="371dp"
                                               android:src="@drawable/ic_launcher_foreground"
                                               android:id="@+id/imgSplash"
                                               app:layout_constraintStart_toStartOf="parent"
                                               app:layout_constraintTop_toTopOf="parent"
                                               app:layout_constraintBottom_toBottomOf="parent"
                                               android:layout_marginStart="4dp"
                                               app:layout_constraintVertical_bias="0.359"/>
        <TextView
                android:text="Saltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnSaltar"
                android:textColor="@color/blanco_azulado"
                android:textStyle="bold" android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
                app:layout_constraintHorizontal_bias="0.902"/>
        <MultiAutoCompleteTextView
                android:text="Ahora podras conseguir nuestros productos desde la comodidad de tu hogar ¡Increible!"
                android:layout_width="304dp"
                android:layout_height="117dp" android:id="@+id/txtMensajeInicio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/imgSplash"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.142"
                app:layout_constraintVertical_bias="0.227" android:textStyle="bold" android:textSize="24sp"
                android:textColor="@color/blaco_arena" android:background="@android:color/transparent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.airbnb.lottie.LottieAnimationView
            android:layout_width="67dp"
            android:layout_height="60dp" app:srcCompat="@drawable/icon_login_button"
            android:id="@+id/btnComenzar"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" android:layout_marginEnd="16dp"
            app:layout_constraintVertical_bias="0.125"/>
    <TextView
            android:text="¡Comencemos! "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtLabelComenzar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/btnComenzar"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.915"
            app:layout_constraintVertical_bias="0.24" android:textStyle="bold"
            android:textColor="@color/azul_brillante" android:textSize="25sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>