<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:layout_marginTop="100dp">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/contenedorRegistro">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="68dp" android:layout_marginTop="10dp">
            <EditText
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtNombrePago" android:minHeight="48dp"
                    android:layout_marginStart="40dp" android:layout_marginTop="18dp" android:padding="15dp"
                    android:hint="Nombre" android:textColor="@color/azul_claro" android:textSize="18sp"
                    android:backgroundTint="@color/azul_brillante" android:textColorHint="@color/azul_claro"/>
            <View
                    android:id="@+id/divider"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginTop="10dp" android:layout_marginStart="-1dp"/>
            <EditText
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtApellidoPago" android:minHeight="48dp" android:layout_marginTop="18dp"
                    android:layout_marginStart="0dp"
                    android:padding="15dp" android:hint="Apellido" android:textColor="@color/azul_claro"
                    android:textSize="18sp" android:backgroundTint="@color/azul_brillante"
                    android:textColorHint="@color/azul_claro"/>
        </LinearLayout>
        <EditText
                android:layout_width="305dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txtCedulaPago"
                android:padding="15dp"
                android:layout_marginTop="20dp" android:layout_marginStart="52dp" android:hint="Cedula"
                android:textColor="@color/azul_claro" android:textSize="18sp"
                android:backgroundTint="@color/azul_brillante" android:textColorHint="@color/azul_claro"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="date"
                android:focusable="false"
                android:clickable="true"
                android:maxLines="1"
                android:minHeight="48dp" android:layout_marginTop="20dp"
                android:layout_marginStart="52dp"
                android:padding="15dp" android:id="@+id/txtFechaNacPago" android:hint="Fecha de Nacimiento"
                android:textColor="@color/azul_claro" android:textSize="18sp"
                android:backgroundTint="@color/azul_brillante" android:textColorHint="@color/azul_claro"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txtDireccionPago" android:minHeight="48dp" android:layout_marginTop="20dp"
                android:layout_marginStart="52dp"
                android:padding="15dp" android:hint="Direccion Domicilio" android:textColor="@color/azul_claro"
                android:textSize="18sp" android:backgroundTint="@color/azul_brillante"
                android:textColorHint="@color/azul_claro"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/txtTelefonoPago" android:minHeight="48dp" android:layout_marginTop="20dp"
                android:layout_marginStart="52dp"
                android:padding="15dp" android:hint="Telefono/Celular" android:textColor="@color/azul_claro"
                android:textSize="18sp" android:backgroundTint="@color/azul_brillante"
                android:textColorHint="@color/azul_claro"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/txtEmailPago" android:minHeight="48dp" android:layout_marginTop="20dp"
                android:layout_marginStart="52dp"
                android:padding="15dp" android:hint="Email" android:textColor="@color/azul_claro"
                android:textSize="18sp" android:backgroundTint="@color/azul_brillante"
                android:textColorHint="@color/azul_claro"/>
        <Button
                android:text="Siguiente"

                android:layout_width="250dp"
                android:layout_height="61dp" android:id="@+id/btnSiguientePago" android:layout_marginStart="75dp"
                android:layout_marginTop="50dp" android:background="@drawable/backgraund_button"
                android:backgroundTint="@color/azul_claro" android:textStyle="bold" android:textSize="20sp"
                android:fontFamily="@font/allerta" android:textAllCaps="false" android:textColor="#FFFFFF"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>