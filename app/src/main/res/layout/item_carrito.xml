<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            android:layout_width="409dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.003"
            app:cardElevation="5dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="147dp"
                    android:layout_height="match_parent" app:srcCompat="@drawable/ic_launcher_foreground"
                    android:id="@+id/imagenProductoCarrito"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="262dp"
                    android:layout_height="200dp">
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txt_nombreProduc_carrito"
                        android:textSize="20sp"
                        android:textStyle="bold" android:padding="5dp" android:layout_margin="5dp"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txt_descProduc_carrito"
                        android:textSize="18sp"
                        android:padding="5dp" android:layout_margin="5dp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="62dp" android:padding="5dp" android:layout_margin="5dp">
                    <TextView
                            android:text="precio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/txt_precioProduc_carrito"
                            android:textSize="20sp" android:textStyle="bold" android:layout_marginTop="12dp"/>
                    <androidx.cardview.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="44dp" app:cardCornerRadius="20dp" android:layout_marginStart="25dp"
                            android:layout_marginTop="5dp" app:cardElevation="5dp">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="112dp"
                                android:layout_height="match_parent" android:layout_marginStart="23dp"
                                android:elevation="20dp">
                            <EditText
                                    android:layout_width="82dp"
                                    android:layout_height="wrap_content"
                                    android:inputType="textPersonName"
                                    android:text="00000"
                                    android:ems="10"
                                    android:id="@+id/txt_cantidadProductoCarrito" android:layout_marginStart="15dp"
                                    tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck"
                                    android:textAlignment="center" android:background="@null"
                                    android:layout_marginTop="9dp"/>
                        </LinearLayout>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <ImageView
                                    android:layout_width="27dp"
                                    android:layout_height="wrap_content" app:srcCompat="@drawable/skin_btn_less"
                                    android:id="@+id/btn_menos_carrito" android:layout_marginStart="-3dp"
                            />
                            <ImageView
                                    android:layout_width="29dp"
                                    android:layout_height="wrap_content" app:srcCompat="@drawable/skin_btn_plus"
                                    android:id="@+id/btn_mas_carrito" android:layout_marginStart="110dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>