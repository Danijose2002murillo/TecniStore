<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="90dp"
                                                   android:layout_marginStart="16dp"
                                                   android:layout_height="110dp">


    <ImageView
            android:id="@+id/categoryImage"
            android:layout_width="58dp"
            android:layout_height="65dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_foreground" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="name"
            android:layout_width="90dp"
            android:layout_height="41dp" android:id="@+id/txtNombreCategoria"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center" android:textSize="12sp" android:textStyle="bold"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/categoryImage"/>
</androidx.constraintlayout.widget.ConstraintLayout>